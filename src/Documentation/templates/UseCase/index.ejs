<head>
    <link rel="stylesheet/less" type="text/css" href="/styles/importer.less" />
    <script src="/js/less.js" type="text/javascript"></script>
</head>

<h1><%= usecase.name %></h1>
<%= usecase.description %>

<img src='./Activities.puml'>

<h2>Actors</h2>
<ul>
<% for(let aname in usecase.actors) {
    aname = aname.replace(/\s/g,'');
    let actor = actors[aname];
-%>
    <li><a href='/doc/actor/<%= aname %>'><%= actor.name %></a></li>
<% } %>
</ul>

<h2>Detail Scenarios</h2>
<ul>
<% for(let sname in usecase.scenarios) {
let nameNoSpaces = sname.replace(/ /g, '');
-%>
<li><a href='#Scenario-<%= nameNoSpaces %>'><%= sname %></a></li>
<% } %>
</ul>
<% for(let sname in usecase.scenarios) {
let nameNoSpaces = sname.replace(/ /g, '');
let scenario = usecase.scenarios[sname];
let pkgPath = global.packages[usecase.package.replace(/ /g, '')].prefix;
-%>
<h3 id='Scenario-<%= nameNoSpaces %>'><%= sname %></h3>
<%= scenario.description %>
<img src="./<%= scenario.name.replace(/\s/g,'') %>.puml">

<h4>Action</h4>
<a href='/doc/package<%= pkgPath %>#Action-<%= scenario.method.replace(/\//g, '-') %>'><%= scenario.method %>(...)</a>
<h4>Actors</h4>
<ul>
<% for(let aname in scenario.actors) {
    aname = aname.replace(/\s/g,'');
    let actor = global.actors[aname];
%>
<li><a href='./doc/actor/<%= actor.shortname %>'><%= actor.name %> </a></li>
</ul>

<% } %>
<% } %>
